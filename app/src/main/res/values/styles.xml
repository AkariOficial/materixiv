<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">?android:colorBackground</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="AppBarLayoutStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="background">?android:colorBackground</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="ClickableItemStyle">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="ClickableItemBorderlessStyle">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="ClickableItemStyleForeground">
        <item name="android:foreground" tools:targetApi="m">?selectableItemBackground</item>
    </style>

    <style name="ClickableItemBorderlessStyleForeground">
        <item name="android:foreground" tools:targetApi="m">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.OverflowMenuStyle" parent="Widget.Material3.PopupMenu.Overflow">
    </style>

    <style name="AlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
    </style>

    <style name="Widget.Button" parent="Widget.Material3.Button">
    </style>

    <style name="Widget.Button.TextButton.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.Material3.CardView.Outlined">
    </style>

    <style name="BookmarkFloatingActionButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
    </style>

    <style name="AppBarStyle">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.ActionBar</item>
    </style>
    <style name="AppBarTransparentStyle">
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
        <item name="android:background">@color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabInlineLabel">false</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="ShapeAppearanceOverlayCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlayCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/spacing_20dp</item>
    </style>

    <style name="Widget.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/spacing_20dp</item>\
        <item name="cornerSizeTopRight">@dimen/spacing_20dp</item>
    </style>
</resources>